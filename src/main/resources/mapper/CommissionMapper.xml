<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ra.boot.mapper.CommissionMapper">

    <resultMap id="BaseResultMap" type="CommissionEntity">
            <id property="commissionId" column="commission_id" jdbcType="INTEGER"/>
            <result property="productId" column="product_id" jdbcType="INTEGER"/>
            <result property="cusumeNum" column="cusume_num" jdbcType="INTEGER"/>
            <result property="rate" column="rate" jdbcType="FLOAT"/>
            <result property="commission" column="commission" jdbcType="FLOAT"/>
    </resultMap>


    <select id="getCommission" resultType="CommissionEntity">
        select * from commission
    </select>

    <insert id="insertCommission" useGeneratedKeys="true" keyProperty="commissionId">
        insert into commission(`commission_id`,`employee_id`, `product_id`,`cusume_num`,`rate`,`commission`)
                      values(#{commissionId},#{employeeId},#{productId},#{cusumeNum},#{rate},#{commission})
    </insert>

</mapper>
