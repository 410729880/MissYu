<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ra.boot.mapper.ProductMapper">

    <resultMap id="BaseResultMap" type="ProductEntity">
            <id property="productId" column="produc_id" jdbcType="INTEGER"/>
            <result property="productName" column="product_name" jdbcType="VARCHAR"/>
            <result property="productPrice" column="product_price" jdbcType="FLOAT"/>
            <result property="productPic" column="product_pic" jdbcType="VARCHAR"/>
            <result property="productContent" column="product_content" jdbcType="VARCHAR"/>
    </resultMap>


    <select id="getProduct" resultType="ProductEntity">
        select * from product
    </select>

    <insert id="insertProduct" useGeneratedKeys="true" keyProperty="productId">
        insert into product(`product_id`,`product_name`,`product_price`,`product_pic`,`product_content`)
                    values(#{productId},#{productName},#{productPrice},#{productPic},#{productContent})
    </insert>

</mapper>
